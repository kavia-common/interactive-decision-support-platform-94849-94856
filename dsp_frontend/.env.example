# Frontend environment variables (copy to .env for local/dev)
# IMPORTANT: Do NOT commit sensitive data to source control.

# Backend API base URL
# Example for local dev with backend on port 8000:
REACT_APP_API_BASE_URL=http://localhost:8000

# Dev server host/port (for local runs)
HOST=0.0.0.0
PORT=3000

# Helps file watchers in some environments (optional)
CHOKIDAR_USEPOLLING=true
